// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  role      Role     @default(USER)
  dept      String?
  createdAt DateTime @default(now())
}
model Document {
  id             Int      @id @default(autoincrement())
  documentNo     String   @unique
  isoType        String?  // optional
  requestFrom    String
  dept           String
  docType        String
  docName        String
  objective      String
  attachmentPath String?
  status         String   @default("DRAFT") // DRAFT or SUBMITTED
  createdBy      String   // email user yang login
  createdAt      DateTime @default(now())
  reviewedBy     String?   // reviewer email
  reviewedDate   DateTime?

  approval1By    String?   // approver 1 email
  approval1Date  DateTime?

  approval2By    String?   // approver 2 email
  approval2Date  DateTime?

  modifiedBy     String?   // last editor email
  modifiedDate   DateTime?
}

enum Role {
  ADMIN
  USER
  REVIEWER
  APPROVER
}
